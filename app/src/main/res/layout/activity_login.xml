<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="97dp"
            android:layout_height="86dp" app:srcCompat="@drawable/app_logo" android:id="@+id/imageView29"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.124"/>
    <EditText android:layout_width="311dp" android:layout_height="58dp"
              app:layout_constraintTop_toBottomOf="@+id/imageView29"
              app:layout_constraintBottom_toTopOf="@+id/editText" app:layout_constraintVertical_bias="0.51"
              android:id="@+id/editText2" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" android:hint="@string/num_input">

    </EditText>
    <EditText android:layout_width="311dp" android:layout_height="58dp"
              android:id="@+id/editText"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="352dp"
              app:layout_constraintEnd_toEndOf="@+id/editText2" app:layout_constraintStart_toStartOf="@+id/editText2"
              app:layout_constraintHorizontal_bias="0.0" android:inputType="TODO" android:hint="@string/code_text">

    </EditText>
    <ImageView
            android:layout_width="109dp"
            android:layout_height="33dp" app:srcCompat="@drawable/get_code" android:id="@+id/imageView31"
            app:layout_constraintTop_toTopOf="@+id/editText"
            app:layout_constraintBottom_toBottomOf="@+id/editText" app:layout_constraintEnd_toEndOf="@+id/editText"
            app:layout_constraintStart_toStartOf="@+id/editText" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.4"/>
    <TextView
            android:text="@string/get_code"
            android:layout_width="64dp"
            android:layout_height="17dp" android:id="@+id/textView31"
            android:textColor="#4686F9" android:textSize="12sp" app:layout_constraintEnd_toEndOf="@+id/imageView31"
            app:layout_constraintStart_toStartOf="@+id/imageView31"
            app:layout_constraintTop_toTopOf="@+id/imageView31"
            app:layout_constraintBottom_toBottomOf="@+id/imageView31"/>
    <com.skydoves.elasticviews.ElasticButton
            android:layout_width="315dp"
            app:button_cornerRadius="10dp"
            android:background="@color/btn_blue"
            android:textColor="@color/white"
            android:text="@string/login_text"
            android:textSize="24sp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="@+id/editText" app:layout_constraintEnd_toEndOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.086" app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/elasticButton">
    </com.skydoves.elasticviews.ElasticButton>
    <CheckBox
            android:text="我已阅读并同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox"
            app:layout_constraintStart_toStartOf="@+id/elasticButton"
            app:layout_constraintTop_toTopOf="@+id/textView28"
            app:layout_constraintBottom_toBottomOf="@+id/textView28" app:layout_constraintVertical_bias="0.482"/>
    <TextView
            android:text="《用户协议》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView28" tools:layout_editor_absoluteY="501dp"
            app:layout_constraintStart_toEndOf="@+id/checkBox" android:textSize="14sp" android:textColor="#5973B3"
    />
    <TextView
            android:text="和"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView29"
            app:layout_constraintStart_toEndOf="@+id/textView28" android:textSize="14sp" android:textColor="#0E0D0D"
            app:layout_constraintTop_toTopOf="@+id/textView28"
            app:layout_constraintBottom_toBottomOf="@+id/textView28" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="《隐私政策》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView30"
            app:layout_constraintStart_toEndOf="@+id/textView29" android:textSize="14sp" android:textColor="#5973B3"
            app:layout_constraintEnd_toEndOf="@+id/elasticButton"
            app:layout_constraintHorizontal_bias="0.285" app:layout_constraintTop_toTopOf="@+id/textView28"
            app:layout_constraintBottom_toBottomOf="@+id/textView28" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>