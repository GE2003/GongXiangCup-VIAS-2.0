<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@color/white"
                                                   android:layout_height="match_parent">
    <com.skydoves.elasticviews.ElasticCardView
            android:layout_width="149dp"
            android:elevation="5dp"
            android:layout_height="237dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/news_btn"
            app:layout_constraintTop_toTopOf="@+id/iden_btn"
            app:layout_constraintVertical_bias="0.0"
            app:cardBackgroundColor="#4686F9"
            app:layout_constraintBottom_toTopOf="@+id/search_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
    >

        <TextView
                android:text="新闻"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView36" android:textColor="#FAF6F6"
                android:textSize="32sp"/>
    </com.skydoves.elasticviews.ElasticCardView>
    <com.skydoves.elasticviews.ElasticCardView
            android:layout_width="149dp"
            android:layout_height="237dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/search_btn"
            android:id="@+id/setting_btn" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.604" android:layout_marginBottom="88dp"
            app:layout_constraintTop_toTopOf="@+id/search_btn" app:layout_constraintVertical_bias="0.0"
            app:cardBackgroundColor="#233D4D">

        <TextView
                android:text="设置"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" android:id="@+id/textView39" android:textColorHint="#F8F0F0"
                android:textSize="32sp" android:textColor="#ECE8E8"/>
    </com.skydoves.elasticviews.ElasticCardView>
    <com.skydoves.elasticviews.ElasticCardView
            android:layout_width="149dp"
            android:layout_height="237dp"
            app:cardCornerRadius="10dp"

            android:id="@+id/search_btn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp" app:cardBackgroundColor="#00A0B5" android:layout_marginStart="32dp">

        <TextView
                android:text="搜索"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" android:id="@+id/textView38" android:textSize="32sp"
                android:textColor="#F4EEEE"/>
    </com.skydoves.elasticviews.ElasticCardView>
    <com.skydoves.elasticviews.ElasticCardView
            android:layout_width="149dp"
            android:elevation="5dp"
            android:layout_height="237dp"
            app:cardCornerRadius="10dp"

            android:id="@+id/iden_btn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/setting_btn" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.29"
            app:cardBackgroundColor="#FA761E" android:layout_marginEnd="32dp">

        <TextView
                android:text="识图"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView37" android:textSize="32sp"
                android:textColor="#F8F3F3"/>
    </com.skydoves.elasticviews.ElasticCardView>

</androidx.constraintlayout.widget.ConstraintLayout>