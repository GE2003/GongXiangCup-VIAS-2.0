<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.View.Activity.MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:elevation="8dp"
            android:src="@drawable/speak"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.954"
            android:id="@+id/circleImageView2">
    </de.hdodenhof.circleimageview.CircleImageView>
    <FrameLayout
            android:layout_width="match_parent"
            android:elevation="7dp"
            android:background="@color/white"
            android:layout_height="wrap_content" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" android:id="@+id/frameLayout">
      <com.google.android.material.bottomnavigation.BottomNavigationView
              android:layout_width="match_parent"
              android:id="@+id/bottom_nav"
              app:elevation="16dp"
              android:background="@color/white"
              app:menu="@menu/bottom_bar"
              app:bb_tabXmlResource="@menu/bottom_bar"
              android:layout_height="wrap_content">
      </com.google.android.material.bottomnavigation.BottomNavigationView>
    </FrameLayout>
    <FrameLayout
            android:layout_width="411dp"
            android:layout_height="610dp"
            android:id="@+id/fragment_container"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout"
            android:layout_marginBottom="8dp"
            tools:ignore="UnknownId" app:layout_constraintHorizontal_bias="0.551">
    </FrameLayout>
    <TextView
            android:text="我的"
            android:layout_width="415dp"
            android:elevation="3dp"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="55dp" android:id="@+id/textView33"
            android:textSize="28sp" android:textColor="#1E1C1C"
            tools:layout_editor_absoluteY="-1dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>

</androidx.constraintlayout.widget.ConstraintLayout>