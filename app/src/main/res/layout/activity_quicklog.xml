<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="33dp"
            android:layout_height="31dp" app:srcCompat="@drawable/cancel" android:id="@+id/imageView27"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintVertical_bias="0.048"/>
    <ImageView
            android:layout_width="104dp"
            android:layout_height="87dp" app:srcCompat="@drawable/app_logo" android:id="@+id/imageView28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.151"
            android:contentDescription="@string/todo"/>
    <TextView
            android:text="@string/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/imageView28"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.095"
            android:textSize="16sp"/>
    <TextView
            android:text="@string/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView27"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView24" app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#131313" android:textSize="32sp" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.033"/>
    <com.skydoves.elasticviews.ElasticButton
            android:layout_width="315dp"
            app:button_cornerRadius="10dp"
            android:text="@string/btn_login"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@color/btn_blue"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView27" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.072" android:id="@+id/quick_login_btn">

    </com.skydoves.elasticviews.ElasticButton>
    <CheckBox
            android:text="我已阅读并同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            app:layout_constraintTop_toTopOf="@+id/textView28"
            app:layout_constraintBottom_toBottomOf="@+id/textView28" app:layout_constraintVertical_bias="0.517"/>
    <TextView
            android:text="《用户协议》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView28"
            app:layout_constraintStart_toEndOf="@+id/checkBox" android:textSize="14sp" android:textColor="#5973B3"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/guideline3" android:layout_marginTop="4dp"/>
    <TextView
            android:text="和"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView29"
            app:layout_constraintStart_toEndOf="@+id/textView28" android:textSize="14sp" android:textColor="#0E0D0D"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/textView28"
            app:layout_constraintBottom_toBottomOf="@+id/textView28"/>
    <TextView
            android:text="《隐私政策》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView30"
            app:layout_constraintStart_toEndOf="@+id/textView29" android:textSize="14sp" android:textColor="#5973B3"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="@+id/textView28"
            app:layout_constraintBottom_toBottomOf="@+id/textView28" app:layout_constraintVertical_bias="0.0"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_begin="418dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline4" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>