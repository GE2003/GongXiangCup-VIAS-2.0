<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <com.skydoves.elasticviews.ElasticCardView
            android:layout_width="149dp"
            android:layout_height="237dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/likes_btn"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/collect_btn"
            app:layout_constraintVertical_bias="0.0"
            app:cardBackgroundColor="#D43030" app:layout_constraintBottom_toTopOf="@+id/his_btn">

        <TextView
                android:text="赞过"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView36" android:textColor="#FAF6F6"
                android:textSize="32sp"/>
    </com.skydoves.elasticviews.ElasticCardView>
    <com.skydoves.elasticviews.ElasticCardView
            android:layout_width="149dp"
            android:layout_height="237dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/his_btn"
            android:id="@+id/person_btn" app:layout_constraintBottom_toBottomOf="@+id/his_btn"
            app:layout_constraintHorizontal_bias="0.604" android:layout_marginBottom="88dp"
            app:layout_constraintTop_toTopOf="@+id/his_btn" app:layout_constraintVertical_bias="0.0"
            app:cardBackgroundColor="#664032">

        <TextView
                android:text="个人资料"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" android:id="@+id/textView39" android:textColorHint="#F8F0F0"
                android:textSize="32sp" android:textColor="#ECE8E8"/>
    </com.skydoves.elasticviews.ElasticCardView>
    <com.skydoves.elasticviews.ElasticCardView
            android:layout_width="149dp"
            android:layout_height="237dp"
            app:cardCornerRadius="10dp"

            android:id="@+id/his_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp" app:cardBackgroundColor="#207F4C">

        <TextView
                android:text="历史"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" android:id="@+id/textView38" android:textSize="32sp"
                android:textColor="#F4EEEE"/>
    </com.skydoves.elasticviews.ElasticCardView>
    <com.skydoves.elasticviews.ElasticCardView
            android:layout_width="149dp"
            android:layout_height="237dp"
            app:cardCornerRadius="10dp"

            android:id="@+id/collect_btn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/likes_btn"
            app:layout_constraintBottom_toTopOf="@+id/person_btn" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.604" app:layout_constraintVertical_bias="0.279"
            app:cardBackgroundColor="#F7A219">

        <TextView
                android:text="收藏"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView37" android:textSize="32sp"
                android:textColor="#F8F3F3"/>
    </com.skydoves.elasticviews.ElasticCardView>

</androidx.constraintlayout.widget.ConstraintLayout>